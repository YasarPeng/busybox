    && echo 'ðŸŒ ç½‘ç»œæ¨¡å¼: Host' >> /etc/motd \
    && echo 'ðŸš€ å¼€å§‹æ‚¨çš„è°ƒè¯•å·¥ä½œå§ï¼' >> /etc/motd \
    && echo '' >> /etc/motd

# åˆ›å»º .bashrc æ¥æ˜¾ç¤ºæ¬¢è¿Žè¯­å¥
