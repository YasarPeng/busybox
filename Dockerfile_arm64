# å®‰è£… MinIO å®¢æˆ·ç«¯ (mc)
RUN curl -sSL https://dl.min.io/client/mc/release/linux-arm64/mc -o /usr/local/bin/mc \
    && chmod +x /usr/local/bin/mc

# å®‰è£… etcdctl å·¥å…·
RUN curl -sSL https://github.com/etcd-io/etcd/releases/download/v3.5.25/etcd-v3.5.25-linux-arm64.tar.gz -o etcd.tar.gz \
    && tar -xzvf etcd.tar.gz --strip-components=1 -C /usr/local/bin etcd-v3.5.25-linux-arm64/etcdctl \
    && rm etcd.tar.gz \
    && chmod +x /usr/local/bin/etcdctl
# æ·»åŠ æ¬¢è¿Žè¯­å¥åˆ°motd
RUN echo '' > /etc/motd \
    && echo 'ðŸ”§ æ¬¢è¿Žä½¿ç”¨ laiye-tools-debug è°ƒè¯•å·¥å…·ç®±ï¼' >> /etc/motd \
